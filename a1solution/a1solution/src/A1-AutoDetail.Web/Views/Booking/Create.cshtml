@using A1_AutoDetail.Web.Models
@model CreateBookingViewModel

<h1 class="display-4 mb-4 text-center">Auto Detailing Shop</h1>

<div class="row">
    <div class="col-12 col-md">
        <h2 class="mb-3">Current bookings</h2>

        @if (Model.CurrentBookings.Count == 0)
        {
            <p>(none)</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Slot</th>
                        <th>Customer</th>
                        <th>Service</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model.CurrentBookings)
                    {
                        <tr>
                            <td>@b.StartTimeText</td>
                            <td>@b.CustomerName</td>
                            <td>@b.DetailServiceName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    
    <div class="d-none d-md-block col-md-1">
        <!-- forcing Bootstrap to give me a gap in the middle -->
    </div>
    
    <div class="col-12 col-md">
        <h2 class="mb-3">Create booking</h2>

        <form asp-controller="Booking" asp-action="Create" method="post">
            <div class="mb-3">
                <label class="form-label">Customer</label>
                <select asp-for="CustomerId" asp-items="Model.Customers" class="form-select">
                    <option value="">-- choose --</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Service</label>
                <select asp-for="DetailServiceId" asp-items="Model.Services" class="form-select">
                    <option value="">-- choose --</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Time slot</label>
                <select asp-for="TimeSlotId" asp-items="Model.TimeSlots" class="form-select">
                    <option value="">-- choose --</option>
                </select>
            </div>

            <button class="btn btn-primary" type="submit">Book</button>
        </form>

        @if (!string.IsNullOrWhiteSpace(Model.Message))
        {
            <div class="card mt-3">
                <h6 class="card-header">@Model.Message</h6>
                <div class="card-body">
                    @if (Model.Outcome != null)
                    {
                        <p>Outcome: @Model.Outcome</p>
                    }
                    @if (Model.BookingId != null)
                    {
                        <p>BookingId: @Model.BookingId</p>
                    }
                </div>
            </div>
        }
    </div>
</div>


